<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecyclerView" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#54337D</item>
        <item name="colorPrimaryVariant">#54337D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#54337D</item>
        <item name="colorSecondaryVariant">#54337D</item>
        <item name="colorOnSecondary">#54337D</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#54337D</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RecyclerView.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecyclerView.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecyclerView.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>